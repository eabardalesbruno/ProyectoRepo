pipeline {
    agent any
    
    environment {
        BRANCH = 'develop'
        VERSION = 'latest'
    }

    stages {
        stage('Run SSH Commands') {
            steps {
                script {
                    def remoteCommands = [
                        "/mnt/sda4/intech/ribera-scripts/docker/pro-ribera-app.sh --branch ${BRANCH} --version ${VERSION} --action build",
                        "/mnt/sda4/intech/ribera-scripts/docker/pro-ribera-app.sh --branch ${BRANCH} --version ${VERSION} --action stop",
                        "/mnt/sda4/intech/ribera-scripts/docker/pro-ribera-app.sh --branch ${BRANCH} --version ${VERSION} --action remove",
                        "/mnt/sda4/intech/ribera-scripts/docker/pro-ribera-app.sh --branch ${BRANCH} --version ${VERSION} --action run"
                    ]
                    
                    sshagent(['ssh-agent']) {
                        for (def command in remoteCommands) {
                            echo "Executing command: $command"
                            def sshOutput = sh(
                                script: "ssh -o StrictHostKeyChecking=no eperez@185.185.82.98 '$command'",
                                returnStdout: true
                            )
                            echo "Command output:\n$sshOutput"
                            def errorTypes = ['error', 'exception', 'failure', 'failed', 'fatal', 'conflict', 'timeout']
                            def errorFound = false
                            
                            for (def errorType in errorTypes) {
                                def regex = "(?i)\\b${errorType}\\b"
                                if (sshOutput =~ regex) {
                                    error("Command failed with error:\n$sshOutput")
                                    errorFound = true
                                }
                            }
                            
                            if (errorFound) {
                                currentBuild.result = 'FAILURE'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
